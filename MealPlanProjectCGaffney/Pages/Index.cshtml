@page
@model MealApp.Pages.IndexModel
@{
    ViewData["Title"] = "Personalized Meal Planner";
}

<h1>Personalized Meal Planner</h1>

<form method="post">
    <label>Name:</label><br />
    <input type="text" asp-for="UserInput.Name" required class="form-input" /><br />

    <label>Email:</label><br />
    <input type="email" asp-for="UserInput.Email" required class="form-input" /><br />

    <label>Foods You Like:</label><br />
    <input type="text" asp-for="UserInput.Likes" class="form-input" /><br />

    <label>Foods You Dislike:</label><br />
    <input type="text" asp-for="UserInput.Dislikes" class="form-input" /><br />

    <label>Allergies:</label><br />
    <input type="text" asp-for="UserInput.Allergies" class="form-input" /><br />

    <button type="submit" class="form-button">Generate Meal Plan</button>
</form>

@if (!string.IsNullOrEmpty(Model.UserInput?.MealPlan))
{
    <h2>Your 7-Day Meal Plan:</h2>
    <pre class="result-box">@Model.UserInput.MealPlan</pre>
}
